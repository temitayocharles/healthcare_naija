rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    match /health_records/{ownerId}/{fileName} {
      allow read, write: if signedIn() && request.auth.uid == ownerId;
    }

    match /chat_attachments/{ownerId}/{fileName} {
      allow read, write: if signedIn() && request.auth.uid == ownerId;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
